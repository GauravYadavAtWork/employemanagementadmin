<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Information</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        header {
            background-color: #333;
            color: #fff;
            padding: 10px 0;
            text-align: center;
        }

        nav {
    background-color: #444;
    color: #fff;
}

.navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 5px;
}

.navbar-text {
    font-size: 20px;
    margin: 0;
    color: black;
    font-size: 20px;
}

.logout-button {
    background-color: #e74c3c;
    color: #fff;
    border: none;
    padding: 10px 20px;
    cursor: pointer;
}

.logout-button:hover {
    background-color: #c0392b;
}


        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .student-info p {
            margin: 10px 0;
        }

        footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 10px 0;
        }

        .logout-button {
            float: right;
            background-color: #e74c3c;
            color: #fff;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
        }

        .logout-button:hover {
            background-color: #c0392b;
        }
        form>button{
            border-radius: 5px;
        }
        .student-image {
    float: right; /* Float the image to the right side */
    margin-left: 20px; /* Add some margin to separate it from student details */
    max-width: 200px; /* Set a maximum width for the image */
    height: auto; /* Maintain aspect ratio */
}
    span{
        font-size: 18px;
        font-weight: bold;
    }
    </style>
</head>
<body>
    <header>
        <h1>Employee Information</h1>
    </header>
    
    <nav>
        <div class="container">
            <div class="navbar">
                <p class="navbar-text"><%=name %></p>
                <form action=<%= route %> method="GET">
                <button class="logout-button" type="submit">Back</button></form>
            </div>
        </div>
    </nav>
    <div class="container">
        <% for(var i=0;i<sdetails.length;i++) {%>
            <div class="student-image">
                <% if (sdetails[i] && sdetails[i].image && sdetails[i].image.data)
              { %>
              <!-- Display the image if it exists -->
              <img
                src="data:<%= sdetails[i].image.contentType %>;base64,<%= sdetails[i].image.data.toString('base64') %>"
                alt="User Image"
                height="150px"
                width="150px"
              />
              <% } else { %>
              <!-- Display a placeholder or message if no image is available -->
              <p>No image available.</p>
              <% } %>
            </div>
            <div class="student-info">
    <p><span>Name : </span><%= sdetails[i].Name ? " " + sdetails[i].Name : "" %></p>
    <p><span>Roll No :</span><%= sdetails[i]._id ? " " + sdetails[i]._id : "" %></p>
    <p><span>Branch : </span><%= sdetails[i].Branch ? " " + sdetails[i].Branch : "" %></p>
    <p><span>Joining Year : </span><%= sdetails[i].PassingYear ? " " + sdetails[i].PassingYear : "" %></p>
    <p><span>Mobile : </span><%= sdetails[i].Mobile ? " " + sdetails[i].Mobile : "" %></p>
    <p><span>Email : </span><%= sdetails[i].Email ? " " + sdetails[i].Email : "" %></p>
    <% if (sdetails[i].COMPANY_1 && sdetails[i].PACKAGE_1) { %>
        <p><span>Skill 1 :</span><%= " " + sdetails[i].COMPANY_1 %> <span>Experience Duration :</span><%= " " + sdetails[i].PACKAGE_1 %></p>
    <% } %>
    <% if (sdetails[i].COMPANY_2 && sdetails[i].PACKAGE_2) { %>
        <p><span>Skill 2 :</span><%= " " + sdetails[i].COMPANY_2 %> <span>Experience Duration :</span><%= " " + sdetails[i].PACKAGE_2 %></p>
    <% } %>
    <% if (sdetails[i].COMPANY_3 && sdetails[i].PACKAGE_3) { %>
        <p><span>Skill 3 :</span><%= " " + sdetails[i].COMPANY_3 %> <span>Experience Duration :</span><%= " " + sdetails[i].PACKAGE_3 %></p>
    <% } %>
    <% if (sdetails[i].COMPANY_4 && sdetails[i].PACKAGE_4) { %>
        <p><span>Skill 4 :</span><%= " " + sdetails[i].COMPANY_4 %> <span>Experience Duration :</span><%= " " + sdetails[i].PACKAGE_4 %></p>
    <% } %>
    <% if (sdetails[i].COMPANY_5 && sdetails[i].PACKAGE_5) { %>
        <p><span>Skill 5 :</span><%= " " + sdetails[i].COMPANY_5 %> <span>Experience Duration :</span><%= " " + sdetails[i].PACKAGE_5 %></p>
    <% } %>
    <!-- <p>ID: 987654</p> -->
</div>

        <br><hr><br>
        <% } %>
        <!-- Repeat the Employee info block for other students -->
    </div>
    <footer>
        &copy; 2024-EmployeeNet
    </footer>
</body>
</html>
