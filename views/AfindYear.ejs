<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Controls</title>
    <style>
      body {
        font-family: "Montserrat", sans-serif;
        margin: 0;
        padding: 0;
      }
      body {
        min-height: 100vh;
        max-width: 100%;
        background-image: linear-gradient(
            rgba(4, 9, 30, 0.7),
            rgba(4, 9, 30, 0.7)
          ),
          url(/psit\ kanpur.jpg);
        background-position: center;
        background-size: cover;
        background-position: relative;
      }

      header {
        background-color: rgba(47, 184, 77, 0.489);
        color: #fff;
        padding: 20px 30px;
        display: flex; /* Add display flex to arrange items horizontally */
        justify-content: space-between; /* Space between items */
        align-items: center; /* Vertically align items */
      }

      nav {
        display: flex;
        font-size: 20px;
      }

      nav a {
        color: #fff;
        text-decoration: none;
        margin: 0 20px;
        font-size: 22px;
      }

      main {
        margin-top: 50px;
        padding: 40px;
        padding-top: 80px;
        text-align: center;
      }

      form {
        max-width: 400px;
        margin: auto;
      }

      select {
        width: 100%;
        padding: 10px;
        font-size: 30px;
        margin-bottom: 30px;
        margin-top: 50px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: rgba(190, 252, 203, 0.543);
      }

      button {
        background-color: rgba(47, 184, 77, 0.489);
        font-size: 20px;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
      }
      img {
        height: 100px;
      }

      button:hover {
        background-color: rgba(40, 96, 52, 0.489);
      }

      /* Media query for screens less than 768px */
      /* Media query for screens less than 768px */
      @media (max-width: 768px) {
        header {
          flex-direction: column;
          align-items: flex-end;
          padding: 10px;
        }

        nav {
          display: none;
          flex-direction: column;
          align-items: center;
          position: absolute;
          top: 50px;
          right: 0;
          background-color: rgb(18, 108, 36);
          width: 100%;
          margin: auto;
        }

        nav.active {
          display: flex;
        }
        main {
          margin-top: 10px;
          padding: 40px;
          text-align: center;
        }

        .menu-icon {
          display: block;
          text-align: center;
          padding: 10px;
          background-color: rgba(54, 131, 71, 0.489);
          color: #fff;
          cursor: pointer;
        }

        .menu-icon:before {
          content: "\2630";
          font-size: 24px;
        }

        /* Toggle the 'active' class on click */
        .menu-icon.active:before {
          content: "\2715";
        }
        img {
          height: 60px;
        }
        nav a {
          margin: 10px 0; /* Add spacing between the links */
          font-size: 25px;
          padding: 5px 5px; /* Add padding to the links */
        }
        button {
          background-color: rgba(47, 184, 77, 0.489);
          color: #b5f4a8;
          font-size: 15px;
          border: none;
          padding: 10px 20px;
          border-radius: 5px;
          cursor: pointer;
        }
        button:hover {
          background-color: rgba(40, 108, 55, 0.489);
        }
        select {
          width: 100%;
          padding: 10px;
          font-size: 20px;
          margin-bottom: 10px;
          margin-top: 50px;
          border: 1px solid #ccc;
          border-radius: 5px;
          background-color: rgba(190, 252, 203, 0.543);
        }
      }
    </style>
  </head>
  <body>
    <header>
      <nav>
        <a href="/home">Home</a>
        <a href="/admin/find">searchRoll</a>
        <a href="/admin/findBranch">searchBranch</a>
        <a href="/admin/findName">searchName</a>
        <a href="/admin/findYear">searchYear</a>
        <a href="/addNewUser">Upload Info</a>
        <a href="/logout">LogOut</a>
      </nav>
      <div class="menu-icon" onclick="toggleMenu()"></div>
    </header>
    <main>
      <form action="/admin/findYear/passingYear" method="post">
        <select
          name="passingYear"
          aria-placeholder="Select Passing Year"
          required
        >
          <option value="" disabled selected>Select PassingYear</option>
          <option value="2021">2021</option>
          <option value="2022">2022</option>
          <option value="2023">2023</option>
          <option value="2024">2024</option>
          <option value="2025">2025</option>
          <option value="2026">2026</option>
          <option value="2027">2027</option>
          <option value="2028">2028</option>
          <!-- Add more options as needed -->
        </select>
        <button type="submit">Search</button>
      </form>
    </main>
    <script>
      function toggleMenu() {
        var nav = document.querySelector("nav");
        var menuIcon = document.querySelector(".menu-icon");
        if (nav.classList.contains("active")) {
          nav.classList.remove("active");
          menuIcon.classList.remove("active");
        } else {
          nav.classList.add("active");
          menuIcon.classList.add("active");
        }
      }
    </script>
  </body>
</html>
